<script type="text/javascript">
    function validateForm() {
        var today = new Date();
        document.getElementById('biomedia:userTerms.date.month').value = today.getMonth();
        document.getElementById('biomedia:userTerms.date.date').value = today.getDate();
        document.getElementById('biomedia:userTerms.date.year').value = today.getFullYear();

        document.userTermsAcceptanceForm.submit();
        return true;
    }
</script>